generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  email       String        @unique
  password    String
  dateOfRegister DateTime @default(now())
  Leaderboard Leaderboard[]
  Save_files  Save_files[]
  role        Role          @default(USER)

  Inventory Inventory[]

  Load Load[]
}

model Leaderboard {
  id      Int   @id @default(autoincrement())
  user_id Int
  score   Int
  user    Users @relation(fields: [user_id], references: [id])
}

model Save_files {
  id          Int    @id @default(autoincrement())
  user_id     Int
  petName     String
  petType     String
  petEnergy   Int
  petHunger   Int
  petMood     Int
  petHealth   Int
  hoursPlayer Int
  goldEarned  Int
  currentGold Int
  user        Users  @relation(fields: [user_id], references: [id])
  inventory   Inventory @relation(fields: [id], references: [id])
  load       Load?
}

model Inventory {
  id               Int         @id @default(autoincrement())
  user_id          Int
  currentFood      Int
  currentHeal      Int
  currentEnergyBar Int
  user             Users       @relation(fields: [user_id], references: [id])
  save_file        Save_files? @relation
  load          Load? @relation
}

model Load{
  id          Int    @id @default(autoincrement())
  user_id     Int
  petName     String
  petType     String
  petEnergy   Int
  petHunger   Int
  petMood     Int
  petHealth   Int
  hoursPlayer Int
  goldEarned  Int
  currentGold Int
  user        Users @relation(fields: [user_id], references: [id])
  inventory   Inventory @relation(fields: [id], references: [id], map: "Load_Inventory_id_fkey")
  save_file Save_files @relation(fields: [id], references: [id], map: "Load_SaveFiles_id_fkey")
}


enum Role {
  ADMIN
  USER
}
